#include<bits/stdc++.h>
using namespace std;

void Alternating_Characters_Problem(string s)
{
    int d=0;
    for (int i=0; i<s.size();i++)                   
        (s[i]==s[i+1]) ? d++ : d;                   // Algortihm Used
    cout<<d<<endl;
}

int main()
{
    int t;  string s;                               // 't' stands for test cases
    cin>>t;
    
    for (int i=0; i<t; i++)
    {
        cin>>s;
        Alternating_Characters_Problem(s);          // functional call
    }
    return 0;
}
