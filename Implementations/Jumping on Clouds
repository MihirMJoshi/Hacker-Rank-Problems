#include <bits/stdc++.h>

using namespace std;

int jumpingOnClouds(vector <int> c) 
{
    int n = c.size(); int res=0;
    for(int i=0;i<(n-1);) 
    c[i+2]?(res++,i++):(res++,i+=2);        
    return res;
}

int main() {
    int n;
    cin >> n;
    vector<int> c(n);
    for(int c_i = 0; c_i < n; c_i++){
       cin >> c[c_i];
    }
    int result = jumpingOnClouds(c);
    cout << result << endl;
    return 0;
}
