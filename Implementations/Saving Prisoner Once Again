#include<bits/stdc++.h>
using namespace std;

void Save_The_Prisoner(int n, int m, int s)
{
       cout<<((( m - 1 + s - 1) % n) + 1)<<endl; // IMPORTANT ALGORITHM FOR DISTRIBTUTION OF                                                           SWEETS
}

int main()
{
    int t; int n,m,s;                  // 't stands for test case 'n';tands for number of sweets
    cin>>t;                            // 'm' stands for number of prisoners
                                       // 's'stands for the prisoner from where passing of sweets
    for(int i=0; i<t; i++)             // will start
    {
    cin>>n>>m>>s;
    Save_The_Prisoner(n,m,s);           // function call
    }
    return 0;
}
