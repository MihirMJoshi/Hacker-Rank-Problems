#include <bits/stdc++.h>

using namespace std;

int utopianTree(int n) 
{
    int c=1;
    for (int i=1; i<=n; i++)
    {
        if (n==0)
        {
            return 1;
            break;
        }
        if (i%2 != 0)
            c = c*2;
        
        if (i%2 == 0)
            c += 1;
    }
    return c;
    // Complete this function
}

int main() {
    int t;
    cin >> t;
    for(int a0 = 0; a0 < t; a0++)
    {
        int n;
        cin >> n;
        int result = utopianTree(n);
        cout << result << endl;
    }
    return 0;
}
