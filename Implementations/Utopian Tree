#include <bits/stdc++.h>

using namespace std;

int utopianTree(int n) 
{
    int height=1;
    
    for (int i=1; i<=n; i++)
         (i%2 != 0) ? height = height*2 :  height += 1;
    
    return height;
}

int main() 
{
    int t;                              // t stands for number of test cases
    cin >> t;
    for(int a0 = 0; a0 < t; a0++)
    {
        int n;                          // n stands for number of cycles
        cin >> n;                   
        int result = utopianTree(n);    // function call
        cout << result << endl;
    }
    return 0;
}
